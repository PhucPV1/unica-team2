<!-- Start Header -->
<%- include("partials/header") %>
<!-- End Header -->
<link rel="stylesheet" href="/css/order.css" />
<script src="https://www.paypal.com/sdk/js?client-id=AVMS7wPrVok4AzcjazhlPj7ysZvRUuZe0I_EXBsluGci1n_npn8LqNiUFD0rG9nXGWXwpT98qtUQP-Mw&components=buttons,funding-eligibility&enable-funding=bancontact&currency=EUR"></script>
<!-- Start Container -->
<div class="content">
  <h2>Phương thức thanh toán</h2>
  <div id="order-content">
    <div id="payment-method">
      <div class="payment">
        <div id="paypal"></div>
        <button id="stripe">Stripe Checkout</button>
        <button id="multisafepay">Multisafepay Checkout</button>
        <button id="mail">Send Mail</button>
      </div>
    </div>
    <div id="order-details">
      <div class="title">
        <p>Đơn hàng (<%= user.cart.length %>  khóa học)</p>
        <a href="/cart"><i class="fa fa-edit"></i>Sửa</a>
      </div>
      <div class="line"></div>
      <% user.cart.forEach((course) => { %>
      <class class="items" data-course-id="<%= course._id %>">
        <div class="order-item">
          <div class="course-title"><%= course.name %></div>
          <div class="course-price">
            <p><%= course.present_price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %><sup>đ</sup></p>
            <span><%= course.previous_price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %><sup>đ</sup>
          </div>
        </div>
        <div class="line"></div>
      </class>
      <% }) %>
      <div class="order-total">
        <h4>Thành tiền</h4>
        <% var total = user.cart.reduce((totalPrice,course) => { %>
          <% totalPrice = totalPrice + course.present_price%>
          <% return totalPrice %>
        <% },0) %>
        <span><%= total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".")  %><sup>đ</sup></span>
      </div>
    </div>
  </div>
</div>

<!-- End Container -->

<!-- Start Footer -->
<%- include('partials/footer'); %>
<!-- End Footer -->

