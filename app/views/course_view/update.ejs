<!-- Start Header -->
<%- include("../partials/header") %>
<!-- End Header -->

<!-- Start Container -->
<div class="content">
  <form
    method="POST"
    action="/trainer/<%= course._id %>/updateCourse?_method=PATCH"
  >
    <h1 style="text-align: center; font-size: 30px">Cập nhật khóa học</h1>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Tên khóa học</label>
      <input
        type="text"
        class="form-control"
        value="<%= course.name %>"
        id="exampleInputEmail1"
        name="name"
        required
      />
    </div>
    <!-- <div class="mb-3" style="display: none">
      <label for="exampleInputEmail1" class="form-label">Giảng viên</label>
      <input
        type="text"
        class="form-control"
        value="<%= course.owner_id %>"
        id="exampleInputEmail1"
        name="owner_id"
        required
      />
    </div> -->
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Giá gốc</label>
      <input
        type="number"
        class="form-control"
        value="<%= course.previous_price %>"
        id="exampleInputEmail1"
        name="previous_price"
        required
      />
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label"
        >Giá sau khi giảm</label
      >
      <input
        type="number"
        class="form-control"
        value="<%= course.present_price %>"
        id="exampleInputEmail1"
        name="present_price"
        required
      />
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Mô tả</label>
      <input
        type="text"
        class="form-control"
        value="<%= course.description %>"
        id="exampleInputEmail1"
        name="description"
        required
      />
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label"
        >Link hình ảnh khóa học</label
      >
      <input
        type="text"
        class="form-control"
        value="<%= course.img_src %>"
        id="exampleInputEmail1"
        name="img_src"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
  </form>
</div>

<!-- End Container -->

<!-- Start Footer -->
<%- include('../partials/footer'); %>
<!-- End Footer -->
