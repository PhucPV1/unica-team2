<!-- Start Header -->
<%- include("../partials/header") %>
<link rel="stylesheet" href="/css/trainer_index.css">
<!-- End Header -->

<!-- Start Container -->
<div class="content">
  <a href="/admin"><button class="btn btn-primary create-button">Trở về</button></a>
  <br />
  <h2>Danh sách khóa học của học viên <span style="color: blue;"><%= chosenUser.full_name %></span> (<%= courses.length %> khóa học):</h2>
  <div class="grid">
    <% courses.map(course => { %>
      <div class="grid_items">
       <a href="/<%= course.course_id.slug %> ">
          <span class="sale-off"> -<%= Math.ceil(100 - (course.course_id.present_price / course.course_id.previous_price) * 100) %>%</span>
          <img src="<%= course.course_id.img_src %>" alt="" />
          <div class="course_content">
            <h3 class="course_title"><%= course.course_id.name %> </p></h3>
            <div class="teacher_and_prevPrice">
              <span class="teacher_name"><%= course.course_id.trainer_id.full_name %></span>
              <span class="previous_price"><%= course.course_id.previous_price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %><sup>đ</sup></span>
            </div>
            <div class="stars_and_presentPrice">
              <span class="star_rate">
                <% for(i=1;i<=course.course_id.rating;i++){ %> 
                  <i class="fa fa-star co-or" aria-hidden="true"></i>
                <% } %> 
                <% for(i=1;i<=5-course.course_id.rating;i++){ %> 
                  <i class="fa fa-star-o co-or" aria-hidden="true"></i>
                <% } %> 
                (<%= course.course_id.review_count %>)
              </span>
              <span class="present_price"><%= course.course_id.present_price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %><sup>đ</sup></span>
            </div>
          </div>
        </a>
      </div>
      <% })%>
  </div>
</div>

<!-- End Container -->

<!-- Start Footer -->
<%- include("../partials/footer") %>
<!-- End Footer -->
